<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:elevation="2dp"
    app:cardElevation="2dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:weightSum="10">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="top|start">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profileimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boss"
                    app:civ_border="false"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="0dp"
                    app:civ_circle_color="@color/white"
                    app:civ_shadow="false" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/name"
                    fontPath="fonts/gotham.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text="Full Name"
                    android:textColor="@color/green"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/professiontitle"
                    fontPath="fonts/gothammedium.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center|start"
                    android:lineSpacingExtra="4dp"
                    android:text="Professional Title"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="3dp"
                   android:orientation="horizontal">

                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:padding="2dp"
                      android:tint="@color/button_end_call_pressed_color"
                      android:src="@drawable/ic_location_on_black_24dp"/>

                   <TextView
                       android:id="@+id/location"
                       fontPath="fonts/gothammedium.otf"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center|start"
                       android:lineSpacingExtra="4dp"
                       android:maxLines="3"
                       android:text="Location"
                       android:textColor="@color/black"
                       android:textSize="14sp" />
               </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    fontPath="fonts/gotham.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Skills : "
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/skills"
                    fontPath="fonts/gothamregular.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text="Skills"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/pastWork"
                    fontPath="fonts/gothamregular.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text="Past work"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalimages"
                        fontPath="fonts/opensanseb.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_camera_enhance_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/green"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/green"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>