<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/desc"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray"
            android:textSize="16sp" />



    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:ignore="MissingPrefix">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="top|start">

                   <View
                       android:layout_width="match_parent"
                       android:background="@drawable/round_skeleton"
                       android:layout_height="match_parent"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="15dp">

                    <TextView
                        android:id="@+id/name"
                        fontPath="fonts/gothambold.otf"
                        android:layout_width="40dp"
                        android:layout_height="16sp"
                        android:background="@drawable/skeleton"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/professiontitle"
                        android:layout_width="60dp"
                        android:layout_height="14sp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|start"
                       android:background="@drawable/skeleton"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="32dp"
                        android:layout_height="12sp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/skeleton"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/black"
                        android:gravity="center|start"
                        android:textSize="13sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/portfolioview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/portfoliotv"
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="center|start"
                            android:background="@drawable/skeleton"
                            android:singleLine="true"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/underlineportfolioview"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@drawable/skeleton"
                            android:layout_marginTop="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/galleryview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gallerytv"
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skeleton"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="center|start"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/underlinegalleryview"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/skeleton" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit"
                            android:background="@drawable/skeleton"
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="80sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:textAllCaps="true"
                           android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="30dp">

                        <TextView
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="80sp"
                            android:background="@drawable/skeleton"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_marginLeft="5dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/skeleton"/>
                            <View
                                android:layout_marginLeft="5dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/skeleton"/>
                            <View
                                android:layout_marginLeft="5dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/skeleton"/>
                            <View
                                android:layout_marginLeft="5dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/skeleton"/>
                            <View
                                android:layout_marginLeft="5dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/skeleton"/>
                            <View
                                android:layout_marginLeft="5dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/skeleton"/>

                        </LinearLayout>

                        <TextView
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/skeleton"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/professionaljourney"
                            android:layout_width="90sp"
                            android:layout_height="12sp"
                            android:layout_marginTop="10dp"
                            android:gravity="center|start"
                            android:background="@drawable/skeleton"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/readmoreprofessional"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:text="See more"
                            android:visibility="gone"
                            android:textColor="@color/green"
                            android:textSize="16sp" />

                        <TextView
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/skeleton"

                            android:textSize="16sp"
                          />

                        <TextView
                            android:background="@drawable/skeleton"
                            android:id="@+id/bio"
                            android:layout_width="160dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center|start"
                            android:lineSpacingExtra="4dp"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/readmorebio"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:text="See more"
                            android:textColor="@color/green"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center|start"
                            android:background="@drawable/skeleton"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/idealageforrolemodel"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center|start"
                            android:lineSpacingExtra="3dp"
                            android:background="@drawable/skeleton"
                            android:textSize="16sp" />

                        <TextView
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="150sp"
                            android:background="@drawable/skeleton"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center|start"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/skills"
                            android:layout_width="130sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center|start"
                            android:textColor="@color/gray1"
                            android:textSize="16sp" />

                        <TextView
                            fontPath="fonts/gothambold.otf"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="center|start"
                            android:background="@drawable/skeleton"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/languages"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center|start"
                            android:background="@drawable/skeleton"
                            android:textColor="@color/gray1"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.3"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                fontPath="fonts/gothambold.otf"
                                android:layout_width="100dp"
                                android:background="@drawable/skeleton"
                                android:layout_height="wrap_content"
                                android:gravity="center|start"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bodyappearance"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center|start"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal"
                                android:weightSum="2">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/chest"
                                        fontPath="fonts/gothambold.otf"
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|start"
                                     android:background="@drawable/skeleton"
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="60dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center|start"
                                      android:background="@drawable/skeleton"
                                        android:textColor="@color/gray1"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </LinearLayout>




                            <TextView
                                fontPath="fonts/gothambold.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:gravity="center|start"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ethnicity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center|start"
                                android:lineSpacingExtra="4dp"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="50dp"
                        android:alpha="0.3"
                        android:background="@android:color/darker_gray" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>