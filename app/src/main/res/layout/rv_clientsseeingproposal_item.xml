<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:elevation="2dp"
    app:cardElevation="2dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:paddingEnd="15dp"
            android:weightSum="10">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top|start">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profileimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boss"
                    app:civ_border="false"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="0dp"
                    app:civ_circle_color="@color/white"
                    app:civ_shadow="false" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/name"
                    fontPath="fonts/gothambold.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/professiontitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:lineSpacingExtra="4dp"
                    android:text="Professional Title"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:drawableStart="@drawable/ic_location_on_black_24dp"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/black"
                    android:gravity="center|start"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text="Location"
                    android:textColor="@color/text_color_dark_grey"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/proposedbudget"
                fontPath="fonts/gothambold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:text="Proposed budget"
                android:textColor="@color/green"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    fontPath="fonts/gothambold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Skills"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/skills"
                    fontPath="fonts/gothamregular.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="3"
                    android:text="Skills"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/coverletter"
                fontPath="fonts/gothamregular.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:maxLines="5"
                android:text="Cover letter"
                android:textSize="15sp" />

            <TextView
                fontPath="fonts/gothambold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:text="See more"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/chatwithhim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittextbordergreen"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_chat_black_24dp"
                    app:tint="@color/green"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/viewprofile"
                    fontPath="fonts/gothamregular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittextbordergreen"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:text="View Profile"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/viewproposal"
                    fontPath="fonts/gothamregular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittextbordergreen"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:text="View proposal"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:elevation="2dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hireartist"
                    fontPath="fonts/gothamregular.otf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:text="Hire"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>