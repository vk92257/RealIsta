<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/verylightgray3"
    android:orientation="vertical">




        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/title"
                fontPath="fonts/gotham.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select Gender"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="back"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@android:color/black" />

        </FrameLayout>





    <RelativeLayout
        android:id="@+id/empty_language_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/emptylang"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_undraw_blank_canvas_3rbb"
            />
        <TextView
            android:layout_below="@id/emptylang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="nothing to show"
            />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RadioButton android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/male"
        android:textAlignment="viewEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Male"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/gray1"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey" />

    <RadioButton android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/female"
        android:textAlignment="viewEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Female"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/gray1"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_grey" />
    <RadioButton android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/transgender"
        android:textAlignment="viewEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Transgender"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/gray1"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

</LinearLayout>


</LinearLayout>




